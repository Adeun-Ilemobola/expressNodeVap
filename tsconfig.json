{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "preserveConstEnums": true,
    "noEmitHelpers": false,
    "downlevelIteration": false,
    "declaration": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}